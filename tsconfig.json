{
    "version": "2.3.4",
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "target": "es2015",
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": false,
        "outDir": "dist/cjs",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "examples/*"
    ],
    "files": [
        "src/index.ts"
    ]
}
